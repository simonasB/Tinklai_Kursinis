{% extends 'base/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/vendor/iCheck/skins/flat/green.css') }}" rel="stylesheet">
{% endblock %}

{% block page_content %}
<!-- page content -->
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Users</h2>
                        <ul class="nav navbar-right panel_toolbox ">
                            <li>
                                <a href="{{ path('user_new') }}" class="btn btn-info btn-panel-action" >
                                    Add User
                                </a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start user list -->
                        <table class="table table-striped projects">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th style="width: 20%">#Edit</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>#</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.surname }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                        <ul class="list-inline">
                                            <li>{{ role }}</li>
                                        </ul>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-primary btn-xs">
                                            <i class="fa fa-folder"></i> View
                                        </a>
                                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-info btn-xs">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-danger btn-xs">
                                            <i class="fa fa-trash-o"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- end user list -->

                    </div>
                </div>
            </div>
        </div>
<!-- /page content -->
{% endblock page_content %}
